<body>

  <div class="container-fluid">

    <div class="row">

      {{! Welcome message }}
      <div class="col bg-primary text-white leftContent">
        <h5 class="mt-5" id="loginLogo">
          <b>
            MEDANHUB
          </b>
          <br />
          <div class="display-6">
            DASHBOARD
          </div>
        </h5>
        <div class="welcomeMessage">
          <h1>
            <b>
              Selamat datang di
              <br />
              MedanHub
            </b>
          </h1>
          <h5 class="mt-5 display-6">
            Silahkan login untuk masuk ke dalam
            <br />
            Dashboard
          </h5>
        </div>
      </div>

          {{! Login forms }}
      <div class="col rightContent shadow">
        <h2 class="mt-5 login text-center">
          <b>
            Login
          </b>
        </h2>
        {{! Input forms }}
        <div class="form-floating mb-3 mt-5">
          <input
            type="email"
            class="form-control"
            id="floatingInput"
            placeholder="name@example.com"
          />
          <label for="floatingInput">
            Email
          </label>
        </div>
        <div class="form-floating">
          <input
            type="password"
            class="form-control"
            id="floatingPassword"
            placeholder="Kata Sandi"
          />
          <label for="floatingPassword">
            Kata Sandi
          </label>
        </div>
        {{! Show password }}
        <div class="form-check mt-2">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckDefault"
            onclick="showPassword()"
          />
          <label class="form-check-label" for="flexCheckDefault">
            Tampilkan kata sandi
          </label>
        </div>
        <div class="d-grid gap-2 col-4 mx-auto buttonLogin">
          <button class="btn mt-5 btn-lg text-white" type="button" id="loginButton">
            <b>
              M A S U K
            </b>
          </button>
        </div>
      </div>

    </div>
  </div>

