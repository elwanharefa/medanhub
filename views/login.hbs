    // Login
    $('body').on('click', '.btn', function (e) {
      e.preventDefault();
      e.stopPropagation();
      var email = document.querySelector('#floatingInput').value;
      var password = document.querySelector('#floatingPassword').value;
      login.signInWithEmailAndPassword(email, password)
        .then((userCredential) => {
